<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilePage">


    <androidx.cardview.widget.CardView
        android:layout_width="261dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#C5CAE9"
        app:cardElevation="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="75dp"
                app:srcCompat="@drawable/cutecat" />


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userEmailLable"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/material_dynamic_primary10"
                    android:ems="10"
                    android:text="Email : " />

                <TextView
                    android:id="@+id/userEmailValue"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/material_dynamic_primary10"
                    android:ems="10"
                    android:text="demo@gmail.com" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/joinedDateLable"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/material_dynamic_primary10"
                    android:ems="10"
                    android:text="Joined Date : " />

                <TextView
                    android:id="@+id/joinedDateValue"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/material_dynamic_primary10"
                    android:ems="10"
                    android:text="N/A" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sign Out"
                android:background="@color/darkMainColor"
                android:textColor="@color/white"
                android:id="@+id/logoutButton"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>